        "cwd": "${workspaceFolder}/../test-cases",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "preLaunchTask": "Build Xoptfoil2 debug", // "compile",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": false
          }
        ]
      },     
      {
        "name": "worker debug",
